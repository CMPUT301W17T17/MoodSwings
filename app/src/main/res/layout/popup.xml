<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/popup"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:layout_width="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <RelativeLayout
                android:id="@+id/popup_box"
                android:layout_margin="25dp"
                android:layout_marginBottom="50dp"
                android:background="@drawable/popup_shape_gray"
                android:layout_height="match_parent"
                android:layout_width="match_parent">
                <TextView
                    android:text="@string/username_text_popup_default"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="50dp"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:id="@+id/username_text_popup" />
                <ImageView
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:layout_below="@id/username_text_popup"
                    android:src="@mipmap/user_image_default"
                    android:layout_centerHorizontal="true"
                    android:id="@+id/user_image_popup" />
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:id="@+id/situation_layout_popup"
                    android:layout_below="@id/user_image_popup">
                    <TextView
                        android:text="@string/situation_text_default"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="5dp"
                        android:textSize="24sp"
                        android:textStyle="bold"
                        android:id="@+id/situation_text_popup" />
                    <TextView
                        android:textSize="21sp"
                        android:gravity="bottom"
                        android:layout_width="190dp"
                        android:layout_height="match_parent"
                        android:id="@+id/socialDescription"/>

                </LinearLayout>
                <TextView
                    android:text="@string/mood_text_popup_default"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/situation_layout_popup"
                    android:layout_centerHorizontal="true"
                    android:textSize="36sp"
                    android:textStyle="bold"
                    android:id="@+id/mood_text_popup" />
                <TextView
                    android:text="@string/date_popup_default"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/mood_text_popup"
                    android:layout_centerHorizontal="true"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:id="@+id/date_text_popup" />
                <TextView
                    android:text="@string/time_popup_default"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/date_text_popup"
                    android:layout_centerHorizontal="true"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:id="@+id/time_text_popup" />
                <TextView
                    android:text="@string/description_text_popup_default"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/time_text_popup"
                    android:layout_centerHorizontal="true"
                    android:paddingTop="3dp"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:id="@+id/description_text_popup" />
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>


    <ImageView
        android:id="@+id/popup_icon"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_gravity="center"
        android:layout_margin="0dp"
        android:src="@drawable/neutral" />
</RelativeLayout>